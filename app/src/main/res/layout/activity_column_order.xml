<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.dslm.funddataanalysisapp.exceltable.column.ColumnOrderActivity">
    
    <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_column_choose_tab_layout"
            app:layout_constraintTop_toTopOf="parent">
    
        <android.support.design.widget.TabItem android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               android:text="左侧固定列" android:id="@+id/id_left_column_choose_tab"/>
        <android.support.design.widget.TabItem android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               android:text="右侧可滑动列" android:id="@+id/id_right_column_choose_tab"/>
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/id_column_choose_tab_layout"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/id_column_choose_view_pager">

    </android.support.v4.view.ViewPager>
</android.support.constraint.ConstraintLayout>
